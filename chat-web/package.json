{
  "name": "chat-web",
  "version": "0.2.3",
  "private": true,
  "scripts": {
    "build": "npm run clean-app && webpack",
    "watch": "npm run clean-app && webpack --watch --devtool source-map",
    "test": "NODE_ENV=test mocha --require espower-typescript/guess \"./test/**/*.ts\"",
    "doc": "npm run clean-doc && typedoc ./public/app --exclude /**/test/**/*.ts --ignoreCompilerErrors --out ./doc --mode file",
    "clean": "npm run clean-app & npm run clean-doc",
    "clean-app": "rm -f ./public/bundle.js ./public/bundle.js.map",
    "clean-doc": "rm -rf ./doc",
    "lint": "tslint \"./public/app/**/*.ts\" \"./test/**/*.ts\""
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "json-rpc2-implementer": "^0.4.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.1.0",
    "simple-ng-websocket": "^0.2.0",
    "zone.js": "^0.8.11"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^8.1.3",
    "mocha": "^5.1.1",
    "power-assert": "^1.5.0",
    "ts-loader": "^4.3.0",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3"
  }
}
